{
  "manifest_version": 3,
  "name": "Leitor de Texto Selecionado",
  "version": "1.0",
  "description": "LÃª o texto selecionado em voz alta.",
  "permissions": [
    "activeTab",
    "tts",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
